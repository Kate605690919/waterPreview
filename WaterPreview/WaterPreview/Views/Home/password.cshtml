@{
    ViewBag.Title = "password";
}
@section style{
    <link href="~/Content/pages/config.css" rel="stylesheet" />
}
<ol class="breadcrumb">
    <li><a href="/Home/index">智慧水务</a></li>
    <li><a href="/Home/password">修改密码</a></li>
</ol>
<div class="row">
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>修改密码</h5>
            </div>
            <div class="ibox-content">
                <form role="form" class="passwordForChange" method="post">
                    <div class="form-group">
                        <label>原密码：</label>
                        <input type="password" class="form-control" id="passwordOriginal" required="required" name="origin">
                    </div>
                    <div class="form-group">
                        <label>新密码：</label>
                        <input type="password" class="form-control" id="passwordNew" required="required" name="newpassword">
                    </div>
                    <div class="form-group"  id="passwordFormAgain" required="required">
                        <label>再次输入：</label>
                        <input type="password" class="form-control" id="passwordNewAgain" required="required">
                        <label id="againTip" style="display: none">两次密码输入不一致，请重新输入</label>
                    </div>
                    <div class="button-group" id="passwordBtn">
                        <button class="btn btn-default" id="passwordSure" type="button" onclick="sureCheck()">确定</button>
                        <button class="btn btn-default" type="button" onclick="toReturn()">返回</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script>
        function sureCheck() {
            var originalPassword = document.querySelector('#passwordOriginal').value; //输入的原密码
            var newPassword = document.querySelector('#passwordNew').value; //输入的新密码
            var againNewPassword = document.querySelector('#passwordNewAgain').value; //再次输入的密码
            var passwordSure = document.querySelector('#passwordSure');
            var form = document.querySelector('form');
            if (againNewPassword !== newPassword) {
                document.querySelector('#againTip').style.cssText = "display: block;";
                document.querySelector('#passwordNewAgain').style.cssText = "border-color: #ED5565; background-color: #fbc2c4;";
                return;
            }
            form.submit();
        }
        function toReturn() {
            window.location.href = "/Home/index";
        }
    </script>
}
